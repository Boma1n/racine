extends ../base.pug

block content
  main
    .eshop--wrapper
      ul.eshop--productList
        each product, key in products
          li.eshop--productWrapper
            .eshop--productTagWrapper
              p.eshop--productFamily= product.family
            .eshop--productImgWrapper
              img.eshop--productImg(src='' alt='')
            .eshop--productContentWrapper
              p.eshop--productTitle= product.name
              p.eshop--productDescription= product.commonName
            .eshop--productBtnWrapper
              a.eshop--productBtn(href=`/eshop/product/${product._id}`)= `Voir plus - ${product.price}`